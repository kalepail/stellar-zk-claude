# Bind address
API_BIND_ADDR=0.0.0.0:8080

# Logging
RUST_LOG=info

# Security and resource limits
API_KEY=
# Optional browser origin for CORS (leave empty to disable cross-origin browser access)
# CORS_ALLOWED_ORIGIN=https://yourapp.example.com
MAX_TAPE_BYTES=2097152
MAX_JOBS=64
MAX_FRAMES=18000
MIN_SEGMENT_LIMIT_PO2=16
MAX_SEGMENT_LIMIT_PO2=21
HTTP_MAX_CONNECTIONS=25000
HTTP_KEEP_ALIVE_SECS=75
# HTTP_WORKERS=4

# Job retention
JOB_TTL_SECS=86400
JOB_SWEEP_SECS=60
RUNNING_JOB_TIMEOUT_SECS=1800
# After a timeout, abort process if the proof task has not returned after this grace period.
# Set to 0 to disable forced abort (not recommended in production).
TIMED_OUT_PROOF_KILL_SECS=120

# Keep disabled for production
ALLOW_DEV_MODE_REQUESTS=false
RISC0_DEV_MODE=0
