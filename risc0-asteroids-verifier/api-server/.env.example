# Bind address
API_BIND_ADDR=0.0.0.0:8080

# Logging
RUST_LOG=info

# Security and resource limits
MAX_TAPE_BYTES=2097152
MAX_JOBS=64
MAX_FRAMES=18000
MIN_SEGMENT_LIMIT_PO2=16
MAX_SEGMENT_LIMIT_PO2=22
PROVER_CONCURRENCY=1

# Job retention
JOB_TTL_SECS=86400
JOB_SWEEP_SECS=60

# JSON body parser limit (for base64 payload endpoints)
JSON_LIMIT_BYTES=8388608

# Keep disabled for production
ALLOW_DEV_MODE_REQUESTS=false
ALLOW_UNVERIFIED_RECEIPTS=false
RISC0_DEV_MODE=0
