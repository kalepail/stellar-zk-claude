# API bind/auth
API_BIND_ADDR=0.0.0.0:8080
API_KEY=replace-with-strong-random-secret

# Logging/runtime
RUST_LOG=info
RISC0_DEV_MODE=0
ALLOW_DEV_MODE_REQUESTS=false

# Storage
DATA_DIR=/var/lib/stellar-zk/prover

# Request + queueing limits
MAX_TAPE_BYTES=2097152
MAX_JOBS=64
JOB_TTL_SECS=86400
JOB_SWEEP_SECS=60

# Prover policy
MAX_FRAMES=18000
MIN_SEGMENT_LIMIT_PO2=16
MAX_SEGMENT_LIMIT_PO2=21
RUNNING_JOB_TIMEOUT_SECS=1800
TIMED_OUT_PROOF_KILL_SECS=120

# HTTP server tuning
HTTP_MAX_CONNECTIONS=25000
HTTP_KEEP_ALIVE_SECS=75
# HTTP_WORKERS=4

# Optional browser origin for CORS; keep unset for server-to-server only
# CORS_ALLOWED_ORIGIN=https://yourapp.example.com
